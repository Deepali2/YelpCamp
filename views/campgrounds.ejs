<% include ./partials/header %>

  <div class="container">
    <header class="jumbotron">
      <div class="container">
        <h1>Welcome to Camp Grounds</h1>
        <p>View our hand-picked campgrounds from all over the world</p>
        <p>          
          <a href="/campgrounds/new" class="btn btn-primary btn-large">Add New Campground</a>
        </p>
      </div>      
    </header>  
    
    <div id="listCampgrounds" class="row text-center">
      <!-- <div class="col-lg-12">
        <h3>Our Most Popular Campgrounds</h3>
      </div> -->
      <%campgrounds.forEach(function(campground) {%>
        <div class="col-md-3 col-sm-6">
          <div class="thumbnail">
            <%let imageUrl = campground.image;%>            
            <img src=<%=imageUrl%> alt="picture">
            <div class="caption">
                <h4><%=campground.name%></h4>
            </div>
          </div>
        </div>        
      <%});%>

    </div>    
  </div>

<% include ./partials/footer %>

