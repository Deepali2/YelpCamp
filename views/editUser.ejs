<% include ./partials/header.ejs %>
<h2>Edit Account Info for <em><%=user.username%></em></h2>

<form action="/users/<%= user._id %>?_method=PUT" method="POST"> 
  <div>
    <input type="text" value="<%=user.username%>" name="username">
  </div>
  <div>
    <input type="password" placeholder="Current Password" name="currentPassword">
  </div>
  <div>
    <input type="password" placeholder="New Password" name="newPassword">
  </div>
  <div>
    <input type="password" placeholder="Confirm New Password" name="confirmNewPassword">
  </div> 
  <div>
    <input type="submit" value="Update">
  </div>   
</form>

<form class="delete-form" action="/users/<%= user._id %>?_method=DELETE" method="POST">
  <input type="submit" class="btn btn-xs btn-danger" value="Delete Account">
</form>

