<% include ../partials/header.ejs%>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">Yelp Camp</p>
      <div class="list-group">
        <div class="list-group-item active">Info1</div>
        <div class="list-group-item">Info2</div>
        <div class="list-group-item">Info3</div>
        <div class="list-group-item">Info4</div>
      </div>
    </div>
    <div class="col-md-9">
      <div class="thumbnail">
        <img class="img-responsive" src="<%=campground[0].image%>" alt="picture">
        <div class="caption-full">
          <h4 class="pull-right">$9.00/night</h4>
          <h4><a href="">"<%=campground[0].name%>"</a></h4>
          <p><%=campground[0].description%></p>
        </div>
      </div>
      <div class="well">
        <div class="text-right">
            <a class="btn btn-success" href="/campgrounds/<%=campground[0]._id%>/comments/new">Add New Comment</a>
        </div>
        <hr>
        <%campground[0].comments.forEach(function(comment) {%>
          <div class="row">
            <div class="col-md-12">
                <strong><%=comment.author.username%></strong>
                <span class="pull-right">10 days ago</span>
                <p><%=comment.text%></p>
            </div>
          </div>          
        <%});%>
      </div>
    </div>
  </div>
</div>

<%include ../partials/footer.ejs%>